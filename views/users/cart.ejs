<% layout('/layouts/boilerplate') %>

<h2 class="mt-4 mb-4">Your Booked Listings</h2>

<% if(bookings.length === 0) { %>
<div class="alert alert-info">You have not booked any listings yet.</div>
<% } else { %>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 mt-3">
    <% for (let listing of bookings) { %>
    <div class="col mb-4 d-flex align-items-stretch">
        <div class="card listing-card popup-card w-100">
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <img
                    src="<%= listing.image.url %>"
                    class="card-img-top"
                    alt="Listing_Image"
                    style="height: 20rem"
                />
            </a>
            <div class="card-img-overlay"></div>
            <div class="card-body d-flex flex-column justify-content-between">
                <div>
                    <p class="card-text">
                        <b><%= listing.title %> </b><br />
                        &#8377; <%= listing.price.toLocaleString('en-IN') %> /
                        Night
                    </p>
                    <p class="card-text">
                        <%= listing.location %>, <%= listing.country %>
                    </p>
                </div>
                <form
                    method="POST"
                    action="/cart/cancel/<%= listing._id %>"
                    class="d-flex justify-content-center mt-3"
                >
                    <button class="btn btn-danger btn-sm w-75">
                        Cancel Booking
                    </button>
                </form>
            </div>
        </div>
    </div>
    <% }; %>
</div>
<% } %>
